<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_dl_01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_bk">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/main_fl_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/main_ll_end" />

        <LinearLayout
            android:id="@+id/main_ll_end"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#EEFFFF"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/base_ll_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/base_bt_home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_menu_deal"
                    android:contentDescription="@string/app_name"
                    android:duplicateParentState="true" />

                <TextView
                    android:id="@+id/base_tv_home"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="@string/deal"
                    android:textColor="@color/color_select" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/base_ll_poi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/base_bt_poi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_menu_poi"
                    android:contentDescription="@string/app_name"
                    android:duplicateParentState="true" />

                <TextView
                    android:id="@+id/base_tv_poi"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="@string/poi"
                    android:textColor="@color/color_select" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/base_ll_buy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/base_bt_buy"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_menu_buy"
                    android:contentDescription="@string/app_name"
                    android:duplicateParentState="true"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/base_tv_buy"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="@string/buy"
                    android:textColor="@color/color_select" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/base_ll_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/base_bt_user"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_menu_user"
                    android:contentDescription="@string/app_name"
                    android:duplicateParentState="true"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/base_tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="@string/user"
                    android:textColor="@color/color_select" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/base_ll_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/base_bt_more"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_menu_more"
                    android:contentDescription="@string/app_name"
                    android:duplicateParentState="true" />

                <TextView
                    android:id="@+id/base_tv_more"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="@string/more"
                    android:textColor="@color/color_select" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ListView
                android:id="@+id/left_drawer_lv_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3FFFFFFF"
                android:choiceMode="singleChoice"
                android:divider="#000"
                android:dividerHeight="1dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
