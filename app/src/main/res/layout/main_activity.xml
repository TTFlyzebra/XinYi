<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_dl_01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_bk1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/main_toolbar" />

        <FrameLayout
            android:id="@+id/main_fl_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/main_ll_end"
            android:layout_below="@+id/toolbar" />

        <LinearLayout
            android:id="@+id/main_ll_end"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/main_ll_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_iv_home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/app_name"
                    android:duplicateParentState="true"
                    android:src="@drawable/ic_menu_home_on" />

                <TextView
                    android:id="@+id/main_tv_home"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textColor="@color/menu_select_on" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_ll_poi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_iv_poi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/app_name"
                    android:duplicateParentState="true"
                    android:src="@drawable/ic_menu_poi" />

                <TextView
                    android:id="@+id/main_tv_poi"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="@string/poi"
                    android:textColor="@color/color_select" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_ll_buy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_iv_buy"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/app_name"
                    android:duplicateParentState="true"
                    android:orientation="vertical"
                    android:src="@drawable/ic_menu_buy" />

                <TextView
                    android:id="@+id/main_tv_buy"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="@string/buy"
                    android:textColor="@color/color_select" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_ll_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_iv_user"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/app_name"
                    android:duplicateParentState="true"
                    android:orientation="vertical"
                    android:src="@drawable/ic_menu_user" />

                <TextView
                    android:id="@+id/main_tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="@string/user"
                    android:textColor="@color/color_select" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_ll_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_iv_more"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/app_name"
                    android:duplicateParentState="true"
                    android:src="@drawable/ic_menu_more" />

                <TextView
                    android:id="@+id/main_tv_more"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="@string/more"
                    android:textColor="@color/color_select" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/left_drawer_menu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="left" />

</android.support.v4.widget.DrawerLayout>
