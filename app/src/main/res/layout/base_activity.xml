<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/base_add_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_end"
        android:layout_alignParentTop="true"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_end"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#EEFFFF"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/base_ll_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/base_bt_01"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_menu_deal"
                android:contentDescription="@string/app_name"
                android:duplicateParentState="true" />

            <TextView
                android:id="@+id/base_tv_01"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:duplicateParentState="true"
                android:gravity="center"
                android:text="@string/deal"
                android:textColor="@color/color_select" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/base_ll_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/base_bt_02"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_menu_poi"
                android:contentDescription="@string/app_name"
                android:duplicateParentState="true" />

            <TextView
                android:id="@+id/base_tv_02"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:duplicateParentState="true"
                android:gravity="center"
                android:text="@string/poi"
                android:textColor="@color/color_select" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/base_ll_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/base_bt_03"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_menu_user"
                android:contentDescription="@string/app_name"
                android:duplicateParentState="true"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/base_tv_03"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:duplicateParentState="true"
                android:gravity="center"
                android:orientation="vertical"
                android:text="@string/user"
                android:textColor="@color/color_select" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/base_ll_04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/base_bt_04"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_menu_more"
                android:contentDescription="@string/app_name"
                android:duplicateParentState="true" />

            <TextView
                android:id="@+id/base_tv_04"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:duplicateParentState="true"
                android:gravity="center"
                android:text="@string/more"
                android:textColor="@color/color_select" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
