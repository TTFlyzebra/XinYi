<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:gravity="center">

    <ImageView
        android:id="@+id/ac_main_iv01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ac_main_ll01"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/ac_main_ll01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ac_main_bt01"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ac_main_tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文字信息：" />

        <TextView
            android:id="@+id/ac_main_tv01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/ac_main_bt01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_red"
        android:gravity="center"
        android:text="扫描二维码" />

</RelativeLayout>