<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/toobar_tv_01"
        style="@style/ToolbarItem"
        android:gravity="center"
        android:text="@string/deal"
        android:textColor="@color/color_select"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/toolbar_et_01"
            style="@style/ToolbarItem"
            android:background="@drawable/toolbar_searth" />

        <ImageView
            android:id="@+id/toolbar_iv_01"
            style="@style/ToolbarItem"
            android:layout_width="30dp"
            android:src="@drawable/qq_ico01"
            android:visibility="visible" />
    </LinearLayout>
</android.support.v7.widget.Toolbar>

